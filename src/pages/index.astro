---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
import Badge from '../components/Badge.astro';
import LinkedIn from '../components/icons/LinkedIn.astro';
import Github from '../components/icons/Github.astro';
import SocialPill from '../components/icons/SocialPill.astro';
import Mail from '../components/icons/Mail.astro';
import Experience from '../components/Experience.astro';
import SectionContainer from '../components/SectionContainer.astro';
import BriefCase from '../components/icons/BriefCase.astro';
import Code from '../components/icons/Code.astro';
import Projects from '../components/Projects.astro';
---

<Layout title="Porfolio de Renzo Leon Bautista - Desarrollador y programador web"
	description="Estoy buscando poder desarrollar mis habilidades como programador y aprender nuevas cosas">
	<main class="px-4">
		<SectionContainer id="top"  class = "py-16 pb-36">
			<img 
        		class="rounded-full w-12 h-12" 
        		src="public/fotoPerfil.jpg" 
        		alt="RenzoLeon photo"/>
			<h1 class="text-white text-3xl md:text-4x1 lg:text-5xl font-bold flex flex-row gap-x-4 pb-6  lg:pb-10">
				Hey, soy Renzo Leon Bautista 		
			</h1>
			<h2 class="text-xl lg:text-2xl text-wrap max-w-[700px]">
				<span>+1 a√±o de experiencia.</span><span class="text-yellow-200/90">en desarollo web principalmente con PHP.</span> De Lima/Peru
			</h2>
				<nav class="flex gap-4 mt-8 flex-wrap">
					<SocialPill href="https://www.linkedin.com/in/renzo-bautista-9b2b10284/">
						<LinkedIn class="size-4 md:size-6"/>
						LinkedIn
					</SocialPill>
					<SocialPill href="https://github.com/Renzoleon">
						<Github class="size-4 md:size-6"/>
						Github
					</SocialPill>
					<SocialPill href="https://github.com/Renzoleon">
						<Mail class="size-4 md:size-6"/>
						renzo.leon1@unmsm.edu.pe
					</SocialPill>
				</nav>
		</SectionContainer>

		<SectionContainer id = "experiencia">
			<h2 class="text-3xl font-semibold mb-6 flex gap-x-3 items-center">
				<BriefCase class = "size-7"/>
				Experiencia laboral
			</h2>
			<Experience />
		</SectionContainer>

		<SectionContainer class = "py-16 pb-36" id = "proyectos">
			<h2 class="text-3xl font-semibold mb-6 flex gap-x-3 items-center">
				<Code class = "size-7"/>
				Proyectos
			</h2>
			<Projects />
		</SectionContainer>
		

	</main>
</Layout>

